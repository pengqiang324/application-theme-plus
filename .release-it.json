{
    "git": {
        "commitMessage": "chore: release v${version}",
        "commit": true,
        "tag": true,
        "push": true
    },
    "github": {
        "release": true
    },
    "npm": {
        "publish": false
    },
    "hooks": {
        "after:bump": "echo 更新版本成功"
    },
    "plugins": {
        "@release-it/conventional-changelog": {
            "infile": "CHANGELOG.md",
            "preset": "custom-config",
            "release-count": 0,
            "config": "./changelog-option.js"
        }
    }
}
